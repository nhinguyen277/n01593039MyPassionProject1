@model IEnumerable<n01593039MyPassionProject.Models.GroupDto>
@{
    ViewBag.Title = "New";
}

<h2>Create Volunteer</h2>
<form action="/Volunteer/Create" method="POST">
    <div>
        <label>First Name:</label> <input type="text" name="FirstName" />
    </div>
    <div>
        <label>Last Name:</label> <input type="text" name="LastName" />
    </div>
    <div>
        <label>Christian Name:</label> <input type="text" name="ChristianName" />
    </div>
    <div>
        <label>Email:</label> <input type="text" name="Email" />
    </div>
    <div>
        <label>Phone Number:</label> <input type="number" name="PhoneNumber" />
    </div>
    <div>
        <label>Address:</label> <input type="text" name="Address" />
    </div>
    <div>
        <label>Group:</label>
        <select name="GroupId">
            @foreach (var groups in Model)
            {
                <option value="@groups.GroupId">@groups.GroupName</option>

            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Volunteer" />

    </div>
</form>
